<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PixelCompareSuite.ViewModels"
        xmlns:conv="clr-namespace:PixelCompareSuite.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="PixelCompareSuite.Views.CompareResultView"
        x:DataType="vm:CompareResultViewModel"
        Title="エビデンスのキャプチャー比較ツール-Powered by Avalonia-Version-1.0"
        Width="1200" Height="900"
        MinWidth="1000" MinHeight="700"
        Icon="avares://PixelCompareSuite/Assets/monthly_date_time_days_calendar_november_icon_267777.ico"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:ObjectToBoolConverter x:Key="IsNotNullConverter" Invert="False"/>
        <conv:ObjectToBoolConverter x:Key="IsNullConverter" Invert="True"/>
        <conv:PathToBitmapConverter x:Key="PathToBitmapConverter"/>
    </Window.Resources>
    <Window.Styles>
        <!-- 按钮悬停动画 -->
        <Style Selector="Button">
            <Style.Animations>
                <Animation Duration="0:0:0.2">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="1.0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0.8"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Opacity" Value="1.0"/>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform" Value="scale(1.0)"/>
        </Style>
        
        <!-- 列表项动画 -->
        <Style Selector="Border[Name=ListItemBorder]">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform" Value="scale(1.0)"/>
        </Style>
        <Style Selector="Border[Name=ListItemBorder]:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
            <Setter Property="Opacity" Value="1.0"/>
        </Style>
        
        <!-- 进度条动画 -->
        <Style Selector="ProgressBar">
            <Style.Animations>
                <Animation Duration="0:0:0.3">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.5"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Window.Styles>
    <Window.DataContext>
        <vm:CompareResultViewModel />
    </Window.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- 顶部：文件路径 + Sheet/列选择 -->
        <Border Grid.Row="0"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,2"
                Padding="15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F8F9FA" Offset="0"/>
                    <GradientStop Color="#E9ECEF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid ColumnDefinitions="Auto,10,*,10,Auto,10,Auto,10,Auto,10,Auto,10,Auto,10,Auto,10,Auto,10,Auto,Auto">
                <!-- 文件路径标签 -->
                <TextBlock Grid.Column="0" 
                          Text="ファイルパス" 
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
                
                <!-- 文件路径显示 -->
                <TextBox Grid.Column="2" 
                        Text="{Binding FilePath}" 
                        IsReadOnly="True"
                        VerticalAlignment="Center"
                        Watermark="Excelファイルを選んでください"/>
                
                <!-- 选择文件按钮 -->
                <Button Grid.Column="4" 
                       Content="..." 
                       Command="{Binding SelectFileCommand}"
                       Padding="10,5"
                       VerticalAlignment="Center"
                       Classes="accent"/>
                
                <!-- Sheet 标签 -->
                <TextBlock Grid.Column="6" 
                          Text="シート" 
                          VerticalAlignment="Center"
                          Margin="10,0,5,0"/>
                
                <!-- Sheet 下拉框 -->
                <ComboBox Grid.Column="8" 
                         ItemsSource="{Binding AvailableSheets}"
                         SelectedItem="{Binding SelectedSheet}"
                         MinWidth="150"
                         VerticalAlignment="Center"/>
                
                <!-- 列1标签 -->
                <TextBlock Grid.Column="10" 
                          Text="列１" 
                          VerticalAlignment="Center"
                          Margin="10,0,5,0"/>
                
                <!-- 列1输入 -->
                <TextBox Grid.Column="12" 
                        Text="{Binding Column1}" 
                        Width="50"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"/>
                
                <!-- 列2标签 -->
                <TextBlock Grid.Column="14" 
                          Text="列２" 
                          VerticalAlignment="Center"
                          Margin="10,0,5,0"/>
                
                <!-- 列2输入 -->
                <TextBox Grid.Column="16" 
                        Text="{Binding Column2}" 
                        Width="50"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"/>
                
                <!-- 加载按钮 -->
                <Button Grid.Column="18" 
                       Content="データ読み込む" 
                       Command="{Binding LoadDataCommand}"
                       Padding="15,5"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Classes="accent"
                       IsEnabled="{Binding !IsProcessing}"/>
                
                <!-- 导出HTML报告按钮 -->
                <Button Grid.Column="19" 
                       Content="レポート生成" 
                       Command="{Binding ExportHtmlReportCommand}"
                       Padding="15,5"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Classes="accent"
                       IsEnabled="{Binding !IsProcessing}"/>

            </Grid>
        </Border>

        <!-- 中部：左右分栏 -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*">
            <!-- 左侧：对比项缩略列表 -->
            <Border Grid.Column="0" 
                   BorderBrush="#E0E0E0" 
                   BorderThickness="0,0,1,0"
                   Background="White">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- 列表标题 -->
                    <Border Grid.Row="0" 
                           Background="#F5F5F5" 
                           Padding="10"
                           BorderBrush="#E0E0E0" 
                           BorderThickness="0,0,0,1">
                        <TextBlock Text="比較リスト" 
                                  FontWeight="Bold"
                                  FontSize="14"/>
                    </Border>
                    
                    <!-- 缩略图列表 -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CurrentPageItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:CompareItemViewModel">
                                    <Border Name="ListItemBorder"
                                           Margin="5" 
                                           Padding="8"
                                           Background="White"
                                           BorderBrush="#E0E0E0" 
                                           BorderThickness="1"
                                           CornerRadius="4"
                                           Cursor="Hand"
                                           PointerPressed="OnItemPointerPressed">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Style>
                                        </Border.Styles>
                                        
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                            <TextBlock Grid.Row="0" 
                                                      Text="{Binding RowIndex, StringFormat='行目 {0}'}" 
                                                      FontWeight="SemiBold"
                                                      Margin="0,0,0,5"/>
                                            <!-- <TextBlock Grid.Row="1"  -->
                                            <!--            Text="{Binding DiffCount, StringFormat='差異数 {0}'}"  -->
                                            <!--            FontWeight="SemiBold" -->
                                            <!--            Margin="0,0,0,5"/> -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding DiffCount, StringFormat='差異数 {0}'}" 
                                                      FontSize="13"
                                                      TextWrapping="Wrap"
                                                      Margin="0,0,0,3"
                                                      Foreground="Red"/>
                                            
                                            
                                            <!-- <TextBlock Grid.Row="1"  -->
                                            <!--           Text="{Binding Image1Path}"  -->
                                            <!--           FontSize="15" -->
                                            <!--           TextWrapping="Wrap" -->
                                            <!--           Margin="0,0,0,3" -->
                                            <!--           Foreground="#666"/> -->
                                            <!-- -->
                                            <!-- <TextBlock Grid.Row="2"  -->
                                            <!--           Text="{Binding Image2Path}"  -->
                                            <!--           FontSize="11" -->
                                            <!--           TextWrapping="Wrap" -->
                                            <!--           Margin="0,0,0,5" -->
                                            <!--           Foreground="#666"/> -->
                                            
                                            <Grid Grid.Row="3">
                                                <Border Background="#E3F2FD" 
                                                       Padding="5,2"
                                                       CornerRadius="2"
                                                       IsVisible="{Binding IsSizeMismatch, Converter={StaticResource IsNullConverter}}">
                                                    <TextBlock Text="{Binding DifferencePercentageText}" 
                                                              FontSize="10"
                                                              Foreground="#1976D2"
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Background="#FFEBEE" 
                                                       Padding="5,2"
                                                       CornerRadius="2"
                                                       IsVisible="{Binding IsSizeMismatch}">
                                                    <TextBlock Text="ピクセル不一致" 
                                                              FontSize="10"
                                                              Foreground="#C62828"
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- ~1~ 分页控件 @1@ -->
                    <!-- <Border Grid.Row="2"  -->
                    <!--        Background="#F5F5F5"  -->
                    <!--        Padding="10" -->
                    <!--        BorderBrush="#E0E0E0"  -->
                    <!--        BorderThickness="0,1,0,0"> -->
                    <!--     <Grid ColumnDefinitions="Auto,*,Auto,Auto"> -->
                    <!--         <Button Grid.Column="0"  -->
                    <!--                Content="◀ 上一页"  -->
                    <!--                Command="{Binding PreviousPageCommand}" -->
                    <!--                IsEnabled="{Binding CanGoToPreviousPage}" -->
                    <!--                Padding="10,5" -->
                    <!--                Margin="0,0,5,0" -->
                    <!--                ToolTip.Tip="上一页"/> -->
                    <!--          -->
                    <!--         <TextBlock Grid.Column="2"  -->
                    <!--                   VerticalAlignment="Center" -->
                    <!--                   Margin="10,0" -->
                    <!--                   FontWeight="SemiBold"> -->
                    <!--             <TextBlock.Text> -->
                    <!--                 <MultiBinding StringFormat="第 {0} 页 / 共 {1} 页"> -->
                    <!--                     <Binding Path="CurrentPage"/> -->
                    <!--                     <Binding Path="TotalPages"/> -->
                    <!--                 </MultiBinding> -->
                    <!--             </TextBlock.Text> -->
                    <!--         </TextBlock> -->
                    <!--          -->
                    <!--         <Button Grid.Column="3"  -->
                    <!--                Content="下一页 ▶"  -->
                    <!--                Command="{Binding NextPageCommand}" -->
                    <!--                IsEnabled="{Binding CanGoToNextPage}" -->
                    <!--                Padding="10,5" -->
                    <!--                Margin="5,0,0,0" -->
                    <!--                ToolTip.Tip="下一页"/> -->
                    <!--     </Grid> -->
                    <!-- </Border> -->
                </Grid>
            </Border>

            <!-- 右侧：像素差异查看区 -->
            <Grid Grid.Column="1" 
                 Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 差异查看区标题 -->
                <Border Grid.Row="0" 
                       Padding="15"
                       BorderBrush="#90CAF9" 
                       BorderThickness="0,0,0,2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#E3F2FD" Offset="0"/>
                            <GradientStop Color="#BBDEFB" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid RowDefinitions="Auto,Auto">
                        <TextBlock Grid.Row="0"
                                  FontWeight="Bold"
                                  FontSize="14">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="ピクセル差異の確認 - 行目 {0}">
                                    <Binding Path="SelectedItem.RowIndex" 
                                           FallbackValue="未選択"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Grid.Row="1"
                                  FontSize="12"
                                  Foreground="#C62828"
                                  FontWeight="SemiBold"
                                  Margin="0,5,0,0"
                                  IsVisible="{Binding SelectedItem.IsSizeMismatch}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="⚠ 画像のピクセルが不一致: {0}">
                                    <Binding Path="SelectedItem.SizeInfo" 
                                           FallbackValue=""/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- 差异图片显示区 -->
                <Grid Grid.Row="1" 
                     Margin="20"
                     IsVisible="{Binding SelectedItem, Converter={StaticResource IsNotNullConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- 差异图 -->
                    <Border Grid.Column="0" 
                           BorderBrush="#E0E0E0" 
                           BorderThickness="1"
                           Background="#FAFAFA">
                        <Grid RowDefinitions="Auto,*">
                            <Border Grid.Row="0" 
                                  Background="Gray"
                                  Padding="10">
                                <Grid ColumnDefinitions="*,*,*">
                                    <TextBlock Grid.Column="0"
                                              Text="差異画像" 
                                              HorizontalAlignment="Center"
                                              TextAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding SelectedItem.DifferencePercentage, StringFormat='差異度: {0}'}" 
                                              FontWeight="Bold"
                                              Foreground="#D32F2F"
                                              FontSize="14"
                                              Margin="10,0,0,0"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SelectedItem.DiffCount, StringFormat='差異数: {0}'}" 
                                               FontWeight="Bold"
                                               Foreground="Red"
                                               FontSize="14"
                                               Margin="10,0,0,0"/>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1" Background="Black"
                                    Padding="2">
                                <Grid ColumnDefinitions="*,Auto">
                                    <ToolTip.Tip>ダブルクリックしてシステムの画像ビューアで開く</ToolTip.Tip>
                                    <Image Source="{Binding SelectedItem.Image2BitmapPath, Converter={StaticResource PathToBitmapConverter}}"
                                           Stretch="Uniform"
                                           MaxWidth="2000"
                                           MaxHeight="2000"
                                           Cursor="Hand"
                                           PointerPressed="OnDiffImagePointerPressed"/>
                                    <TextBlock Text="差異画像は生成しています..."
                                              IsVisible="{Binding SelectedItem.IsLoading}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              Foreground="#999"/>
                                    <TextBlock Text="リスト項目をクリックすると比較が始まります" 
                                              IsVisible="{Binding SelectedItem.DifferenceImagePath, Converter={StaticResource IsNullConverter}}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"
                                              TextAlignment="Center"
                                              Foreground="#999"
                                              Margin="10"/>
                                </Grid>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
                
                <!-- 未选择提示 -->
                <TextBlock Grid.Row="1" 
                          Text="左側のリストから比較項目を一つ選択してください。" 
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="16"
                          Foreground="#999"
                          IsVisible="{Binding SelectedItem, Converter={StaticResource IsNullConverter}}"/>
            </Grid>
        </Grid>

        <!-- 底部：进度条 + 当前处理状态 -->
        <Border Grid.Row="2" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0"
               Padding="15,10">
            <Grid RowDefinitions="Auto,Auto">
                <!-- 状态消息 -->
                <TextBlock Grid.Row="0" 
                          Text="{Binding StatusMessage}" 
                          Margin="0,0,0,5"
                          FontSize="12"/>
                
                <!-- 进度条 -->
                <ProgressBar Grid.Row="1" 
                            Value="{Binding Progress}" 
                            Maximum="100"
                            Height="8"
                            IsIndeterminate="{Binding IsProcessing}"/>
            </Grid>
        </Border>
    </Grid>
</Window>